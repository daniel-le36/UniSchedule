<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#69c5e1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:id="@+id/relativeLayout"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:id="@+id/imageView3"
            android:src="@drawable/start"
            android:background="@color/colorTime"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/start_time" />

        <TextView
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="12:12"
            android:id="@+id/start_time"
            android:gravity="center_vertical|center_horizontal"
            android:background="#a9f566"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center" />

        <TextView
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="12:12"
            android:id="@+id/end_time"
            android:textAlignment="center"
            android:textColor="#5f5f5f"
            android:background="#a9f566"
            android:gravity="center_vertical"
            android:layout_below="@+id/start_time"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/desc"
            android:textColor="#ffffff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/category" />

        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/category"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/desc"
            android:layout_toEndOf="@+id/imageView3" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:id="@+id/imageView4"
            android:src="@drawable/stop"
            android:background="@color/colorTime"
            android:layout_below="@+id/imageView3"
            android:layout_toEndOf="@+id/start_time" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="12/12/1212"
            android:id="@+id/date"
            android:layout_gravity="right"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/desc" />
    </RelativeLayout>

</LinearLayout>