<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:background="#69c5e1"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="36dp"
        android:id="@+id/item_layout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="12:12"
            android:id="@+id/start_time"
            android:gravity="center_vertical|center_horizontal"
            android:background="#a9f566"
            android:textAlignment="center"
            android:layout_above="@+id/end_time"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="12:12"
            android:id="@+id/end_time"
            android:textAlignment="center"
            android:textColor="#5f5f5f"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="#a9f566"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/desc"
            android:layout_toEndOf="@+id/imageView"
            android:layout_alignParentBottom="true"
            android:textColor="#ffffff"
            android:layout_alignTop="@+id/imageView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/category"
            android:gravity="center_vertical"
            android:layout_alignBottom="@+id/cancel_button"
            android:layout_toEndOf="@+id/cancel_button"
            android:layout_alignParentTop="true" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:id="@+id/imageView"
            android:src="@drawable/start"
            android:background="@color/colorTime"
            android:layout_alignTop="@+id/start_time"
            android:layout_toEndOf="@+id/start_time" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:id="@+id/imageView2"
            android:src="@drawable/stop"
            android:background="@color/colorTime"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/start_time" />

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/cancel_button"
            android:src="@drawable/cancel"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/edit_button"
            android:src="@drawable/edit"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/desc" />

    </RelativeLayout>

</RelativeLayout>