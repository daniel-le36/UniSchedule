<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/red_textview"
            android:background="@drawable/red_circle"
            android:layout_below="@+id/textView7"
            android:layout_centerHorizontal="true"
            android:layout_row="0"
            android:layout_column="0" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/darkred_textview"
            android:background="@drawable/darkred_circle"
            android:layout_below="@+id/red_textview"
            android:layout_alignParentLeft="true"
            android:layout_row="0"
            android:layout_column="1" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/orange_textview"
            android:background="@drawable/orange_circle"
            android:layout_below="@+id/darkred_textview"
            android:layout_alignParentLeft="true"
            android:layout_row="0"
            android:layout_column="2" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/yellow_textview"
            android:background="@drawable/yellow_circle"
            android:layout_below="@+id/orange_textview"
            android:layout_alignParentLeft="true"
            android:layout_row="0"
            android:layout_column="3" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/darkyellow_textview"
            android:background="@drawable/darkyellow_circle"
            android:layout_alignBottom="@+id/darkpink_textview"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:layout_row="0"
            android:layout_column="4" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/darkblue_textview"
            android:background="@drawable/darkblue_circle"
            android:layout_below="@+id/lightgreen_textview"
            android:layout_alignStart="@+id/lightgreen_textview"
            android:layout_row="2"
            android:layout_column="0" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/darkpurple_textview"
            android:background="@drawable/darkpurple_circle"
            android:layout_above="@+id/purple_textview"
            android:layout_alignParentStart="true"
            android:layout_row="2"
            android:layout_column="1" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/purple_textview"
            android:background="@drawable/purple_circle"
            android:layout_alignTop="@+id/pink_textview"
            android:layout_toStartOf="@+id/darkgreen_textview"
            android:layout_row="2"
            android:layout_column="2" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/darkpink_textview"
            android:background="@drawable/darkpink_circle"
            android:layout_below="@+id/pink_textview"
            android:layout_toEndOf="@+id/purple_textview"
            android:layout_row="2"
            android:layout_column="3" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/pink_textview"
            android:background="@drawable/pink_circle"
            android:layout_below="@+id/green_textview"
            android:layout_toEndOf="@+id/darkpink_textview"
            android:layout_row="2"
            android:layout_column="4" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/green_textview"
            android:background="@drawable/green_circle"
            android:layout_below="@+id/darkgreen_textview"
            android:layout_toEndOf="@+id/pink_textview"
            android:layout_row="1"
            android:layout_column="0" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/lightgreen_textview"
            android:background="@drawable/lightgreen_circle"
            android:layout_below="@+id/gridLayout"
            android:layout_toEndOf="@+id/textView7"
            android:layout_row="1"
            android:layout_column="1" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/darkgreen_textview"
            android:background="@drawable/darkgreen_circle"
            android:layout_below="@+id/turquoise_textview"
            android:layout_alignEnd="@+id/darkblue_textview"
            android:layout_row="1"
            android:layout_column="2" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/turquoise_textview"
            android:background="@drawable/turquoise_circle"
            android:layout_below="@+id/blue_textview"
            android:layout_toEndOf="@+id/blue_textview"
            android:layout_row="1"
            android:layout_column="3" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/blue_textview"
            android:background="@drawable/blue_circle"
            android:layout_below="@+id/lightgreen_textview"
            android:layout_alignParentStart="true"
            android:layout_row="1"
            android:layout_column="4" />

    </GridLayout>

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/category_name"
        android:layout_below="@+id/gridLayout"
        android:layout_alignEnd="@+id/gridLayout"
        android:hint="@string/category"/>

</RelativeLayout>